{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2024"
	},
	"include": ["src"]
}
